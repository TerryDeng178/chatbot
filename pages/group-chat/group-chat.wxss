/* pages/group-chat/group-chat.wxss - V7设计规范 */

/* 全局样式 */
.group-chat-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(135deg, #F8FAFC 0%, #F1F5F9 100%);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
}

/* 顶部导航栏 - V7设计 */
.top-nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-bottom: 1rpx solid rgba(148, 163, 184, 0.1);
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.nav-left, .nav-right {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.back-btn {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #6366F1 0%, #8B5CF6 100%);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(99, 102, 241, 0.3);
  transition: all 0.3s ease;
}

.back-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(99, 102, 241, 0.4);
}

.back-icon {
  font-size: 36rpx;
  color: #FFFFFF;
  font-weight: 600;
}

.nav-center {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.group-info {
  text-align: center;
}

.group-name {
  font-size: 40rpx;
  font-weight: 700;
  color: #1E293B;
  margin-bottom: 8rpx;
  display: block;
}

.group-meta {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
}

.member-count {
  font-size: 24rpx;
  color: #64748B;
  background: rgba(99, 102, 241, 0.1);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-weight: 500;
}

.group-status {
  font-size: 24rpx;
  color: #10B981;
  background: rgba(16, 185, 129, 0.1);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-weight: 500;
}

.nav-btn {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #6366F1 0%, #8B5CF6 100%);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(99, 102, 241, 0.3);
  transition: all 0.3s ease;
}

.nav-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(99, 102, 241, 0.4);
}

.nav-icon {
  font-size: 32rpx;
  color: #FFFFFF;
  font-weight: 600;
}

/* AI状态显示栏 - V7设计 */
.ai-status-bar {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  border-bottom: 1rpx solid rgba(148, 163, 184, 0.1);
  padding: 24rpx 32rpx;
  margin-bottom: 16rpx;
}

.status-bar-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.status-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.status-icon {
  font-size: 32rpx;
}

.status-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #1E293B;
}

.status-count {
  font-size: 24rpx;
  color: #6366F1;
  background: rgba(99, 102, 241, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-weight: 500;
}

.ai-status-list {
  white-space: nowrap;
  padding: 8rpx 0;
}

.ai-status-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  margin-right: 32rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 24rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  cursor: pointer;
}

.ai-status-item.active {
  border-color: #6366F1;
  background: rgba(99, 102, 241, 0.05);
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(99, 102, 241, 0.15);
}

.ai-status-item.inactive {
  opacity: 0.6;
  filter: grayscale(0.3);
}

.ai-avatar {
  position: relative;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #F1F5F9 0%, #E2E8F0 100%);
  border-radius: 50%;
}

.ai-emoji {
  font-size: 40rpx;
}

.ai-status-dot {
  position: absolute;
  bottom: 4rpx;
  right: 4rpx;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  border: 3rpx solid #FFFFFF;
}

.ai-status-dot.online {
  background: #10B981;
}

.ai-status-dot.offline {
  background: #94A3B8;
}

.ai-name {
  font-size: 24rpx;
  color: #475569;
  font-weight: 500;
  text-align: center;
  max-width: 120rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.ai-toggle {
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(148, 163, 184, 0.2);
  border-radius: 50%;
  transition: all 0.3s ease;
}

.ai-toggle.active {
  background: #6366F1;
}

.toggle-icon {
  font-size: 20rpx;
  color: #FFFFFF;
  font-weight: 600;
}

/* 消息列表区域 - V7设计 */
.message-list {
  flex: 1;
  padding: 24rpx 32rpx;
  padding-bottom: 220rpx; /* 进一步增加底部padding，确保头像不被遮挡 */
  overflow-y: auto;
  box-sizing: border-box; /* 确保padding不会增加总宽度 */
  width: 100%; /* 确保宽度为100% */
  max-width: 100vw; /* 限制最大宽度为视口宽度 */
}

.load-more {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  padding: 32rpx 0;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid rgba(99, 102, 241, 0.2);
  border-top: 4rpx solid #6366F1;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #64748B;
  font-weight: 500;
}

.message-item {
  margin-bottom: 32rpx;
  animation: fadeInUp 0.4s ease-out;
  width: 100%; /* 确保消息项占满容器宽度 */
  box-sizing: border-box; /* 确保padding不会增加总宽度 */
  overflow: visible; /* 允许内容显示 */
  position: relative; /* 相对定位 */
  max-width: 100vw; /* 限制最大宽度为视口宽度 */
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 用户消息样式 */
.user-message {
  display: flex;
  flex-direction: row-reverse;
  align-items: flex-end;
  gap: 16rpx;
  margin-bottom: 24rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: visible;
  position: relative;
  max-width: 100vw;
}

.user-avatar {
  margin-left: 16rpx;
  margin-right: 0;
  flex-shrink: 0;
  width: 64rpx;
  height: 64rpx;
  min-width: 64rpx;
  max-width: 64rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #6366F1 0%, #8B5CF6 100%);
  border-radius: 50%;
}

.avatar-emoji {
  font-size: 36rpx;
  color: #FFFFFF;
}

.user-message .message-content {
  max-width: calc(100vw - 120rpx); /* 限制最大宽度，避免溢出 */
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  align-items: flex-end; /* 保持右对齐 */
}

.user-bubble {
  background: linear-gradient(135deg, #6366F1 0%, #8B5CF6 100%) !important;
  color: #FFFFFF !important;
  box-shadow: 0 4rpx 16rpx rgba(124, 77, 255, 0.2);
  max-width: calc(100vw - 120rpx); /* 限制最大宽度，避免溢出 */
  word-wrap: break-word;
  word-break: break-word;
  overflow-wrap: break-word;
  box-sizing: border-box;
  overflow: hidden;
  position: relative;
  padding: 20rpx 24rpx;
  border-radius: 28rpx 28rpx 8rpx 28rpx;
  margin-bottom: 8rpx;
  align-self: flex-end; /* 确保气泡右对齐 */
}

.user-bubble::before {
  content: '';
  position: absolute;
  left: auto !important;
  right: -8rpx !important;
  top: 20rpx;
  width: 0;
  height: 0;
  border: 8rpx solid transparent;
  border-right-color: transparent !important;
  border-left-color: #6366F1 !important;
}

.user-bubble .message-text {
  color: #FFFFFF !important;
  word-break: break-word;
  overflow-wrap: break-word;
  max-width: calc(100vw - 160rpx); /* 限制文字最大宽度 */
  overflow: hidden;
  display: block;
  font-size: 30rpx;
  line-height: 1.5;
}

.message-time {
  font-size: 22rpx;
  color: #94A3B8;
  font-weight: 400;
}

/* AI消息样式 */
.ai-message {
  display: flex; /* 添加缺失的display属性 */
  flex-direction: row;
  justify-content: flex-start;
  margin-left: 0; /* 确保左边距为0 */
  padding-left: 0; /* 确保左边距为0 */
  width: 100%; /* 确保消息容器占满宽度 */
  box-sizing: border-box; /* 确保padding不会增加总宽度 */
  overflow: hidden; /* 防止内容溢出 */
  position: relative; /* 相对定位 */
  max-width: 100vw; /* 限制最大宽度为视口宽度 */
  margin-bottom: 24rpx;
  animation: slideInLeft 0.4s ease;
}

.ai-message::before {
  content: '';
  position: absolute;
  left: -8rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 0;
  height: 0;
  border-top: 8rpx solid transparent;
  border-bottom: 8rpx solid transparent;
  border-right: 8rpx solid #F0F4FF;
  animation: slideInLeft 0.4s ease 0.1s both;
}

@keyframes slideInLeft {
  from {
    opacity: 0;
    transform: translateX(-40rpx);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.ai-message .message-avatar {
  margin-right: 16rpx;
  margin-left: 0;
  flex-shrink: 0;
  width: 64rpx; /* 固定头像宽度 */
  height: 64rpx; /* 固定头像高度 */
  min-width: 64rpx; /* 确保头像不会被压缩 */
  max-width: 64rpx; /* 限制最大宽度 */
  overflow: hidden; /* 防止内容溢出 */
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #F1F5F9 0%, #E2E8F0 100%);
  border-radius: 50%;
}

.ai-identity {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.ai-name {
  font-size: 24rpx;
  color: #6366F1;
  font-weight: 600;
}

.ai-personality {
  font-size: 22rpx;
  color: #94A3B8;
  background: rgba(148, 163, 184, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 16rpx;
}

.ai-message .message-content {
  max-width: calc(100vw - 120rpx); /* 限制消息内容宽度，避免溢出 */
  flex: 1; /* 让内容区域占据剩余空间 */
  min-width: 0; /* 允许内容收缩 */
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.ai-bubble {
  background: #FFFFFF;
  color: #303133;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  max-width: calc(100vw - 120rpx); /* 限制最大宽度，避免溢出 */
  word-wrap: break-word;
  word-break: break-word; /* 确保长单词也能换行 */
  overflow-wrap: break-word; /* 兼容性更好的换行 */
  box-sizing: border-box; /* 确保padding不会增加总宽度 */
  overflow: hidden; /* 防止内容溢出 */
  padding: 20rpx 24rpx;
  border-radius: 28rpx 28rpx 28rpx 8rpx;
  margin-bottom: 8rpx;
  position: relative;
}

.ai-bubble::before {
  border-right-color: #FFFFFF !important;
}

.ai-bubble .message-text {
  color: #303133 !important;
  word-break: break-word;
  overflow-wrap: break-word;
  max-width: calc(100vw - 160rpx); /* 限制文字最大宽度 */
  overflow: hidden;
  display: block;
  font-size: 30rpx;
  line-height: 1.5;
}

.user-message .message-time {
  text-align: right; /* 用户消息时间右对齐 */
  margin-top: 8rpx;
  align-self: flex-end; /* 时间右对齐 */
  color: #909399 !important; /* 强制设置文字颜色 */
  display: block; /* 确保显示为块级元素 */
  font-size: 22rpx;
  font-weight: 400;
  width: auto; /* 时间宽度自适应 */
  position: relative; /* 相对定位 */
  right: 0; /* 确保右对齐 */
  left: auto; /* 取消左对齐 */
}

.ai-message .message-time {
  text-align: left;
  margin-top: 8rpx;
  color: #94A3B8;
  font-size: 22rpx;
  font-weight: 400;
  width: 100%; /* 确保时间占满容器宽度 */
  position: relative; /* 相对定位 */
  left: 0; /* 确保左对齐 */
  right: auto; /* 取消右对齐 */
}

/* 系统消息样式 */
.system-message {
  display: flex;
  justify-content: center;
  margin: 24rpx 0;
}

.system-bubble {
  background: rgba(148, 163, 184, 0.1);
  color: #64748B;
  padding: 16rpx 24rpx;
  border-radius: 24rpx;
  font-size: 26rpx;
  font-weight: 500;
}

/* 发送中提示 */
.sending-indicator {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  padding: 32rpx 0;
}

.typing-dots {
  display: flex;
  gap: 8rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  background: #6366F1;
  border-radius: 50%;
  animation: typing 1.4s infinite ease-in-out;
}

.dot:nth-child(1) { animation-delay: -0.32s; }
.dot:nth-child(2) { animation-delay: -0.16s; }

@keyframes typing {
  0%, 80%, 100% {
    transform: scale(0.8);
    opacity: 0.5;
  }
  40% {
    transform: scale(1);
    opacity: 1;
  }
}

.sending-text {
  font-size: 26rpx;
  color: #64748B;
  font-weight: 500;
}

/* 输入区域 - V7设计 */
.input-area {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-top: 1rpx solid rgba(148, 163, 184, 0.1);
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  z-index: 100;
}

.input-container {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.input-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  background: #F8FAFC;
  border: 2rpx solid rgba(148, 163, 184, 0.2);
  border-radius: 32rpx;
  padding: 0 24rpx;
  transition: all 0.3s ease;
}

.input-wrapper:focus-within {
  border-color: #6366F1;
  box-shadow: 0 0 0 4rpx rgba(99, 102, 241, 0.1);
}

.message-input {
  flex: 1;
  height: 80rpx;
  font-size: 30rpx;
  color: #1E293B;
  background: transparent;
  border: none;
  outline: none;
}

.input-placeholder {
  color: #94A3B8;
}

.input-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.action-btn {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(148, 163, 184, 0.1);
  border-radius: 50%;
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: scale(0.95);
  background: rgba(148, 163, 184, 0.2);
}

.action-icon {
  font-size: 28rpx;
  color: #64748B;
}

.send-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(148, 163, 184, 0.2);
  border-radius: 50%;
  transition: all 0.3s ease;
  cursor: pointer;
}

.send-btn.active {
  background: linear-gradient(135deg, #6366F1 0%, #8B5CF6 100%);
  transform: scale(1.05);
  box-shadow: 0 4rpx 16rpx rgba(99, 102, 241, 0.3);
}

.send-icon {
  font-size: 32rpx;
  color: #94A3B8;
  font-weight: 600;
  transition: all 0.3s ease;
}

.send-btn.active .send-icon {
  color: #FFFFFF;
}

/* 弹窗样式 - V7设计 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(12rpx);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.modal-overlay.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  background: linear-gradient(135deg, #FFFFFF 0%, #F8FAFC 100%);
  border-radius: 40rpx;
  max-width: 92vw;
  max-height: 85vh;
  overflow: hidden;
  transform: scale(0.85) translateY(40rpx);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 
    0 25rpx 80rpx rgba(0, 0, 0, 0.15),
    0 8rpx 32rpx rgba(0, 0, 0, 0.08),
    0 0 0 1rpx rgba(255, 255, 255, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.modal-overlay.show .modal-content {
  transform: scale(1) translateY(0);
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 40rpx 32rpx;
  background: linear-gradient(135deg, #F8FAFC 0%, #F1F5F9 100%);
  border-bottom: 1rpx solid rgba(148, 163, 184, 0.08);
  position: relative;
}

.modal-header::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 1rpx;
  background: linear-gradient(90deg, transparent 0%, rgba(148, 163, 184, 0.1) 50%, transparent 100%);
}

.modal-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #1E293B;
  background: linear-gradient(135deg, #1E293B 0%, #334155 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.close-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #F1F5F9 0%, #E2E8F0 100%);
  border-radius: 50%;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  cursor: pointer;
  border: 1rpx solid rgba(148, 163, 184, 0.1);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.close-btn:active {
  transform: scale(0.92);
  background: linear-gradient(135deg, #E2E8F0 0%, #CBD5E1 100%);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.08);
}

.close-icon {
  font-size: 36rpx;
  color: #64748B;
  font-weight: 600;
}

.modal-body {
  padding: 40rpx;
  max-height: 65vh;
  overflow-y: auto;
}

.modal-body::-webkit-scrollbar {
  width: 6rpx;
}

.modal-body::-webkit-scrollbar-track {
  background: rgba(148, 163, 184, 0.05);
  border-radius: 3rpx;
}

.modal-body::-webkit-scrollbar-thumb {
  background: linear-gradient(135deg, #CBD5E1 0%, #94A3B8 100%);
  border-radius: 3rpx;
}

.modal-footer {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: 20rpx;
  padding: 32rpx 40rpx 40rpx;
  border-top: 1rpx solid rgba(148, 163, 184, 0.08);
  background: linear-gradient(135deg, #F8FAFC 0%, #F1F5F9 100%);
}

/* 添加AI助手弹窗特殊样式 */
.add-ai-modal {
  max-width: 88vw;
}

.add-ai-modal .modal-header {
  background: linear-gradient(135deg, #F8FAFC 0%, #F1F5F9 100%);
